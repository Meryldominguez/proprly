{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/prodNew.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "message":{
        "required": "Production title is required",
        "maxLength":"Production name cannot be over 50 characters"
      }
    },
    "dateStart": {
      "anyOf": [
        {"type":"null"},
        {"type":"string"}
      ]
    },
    "dateEnd": {
      "anyOf": [
        {"type":"null"},
        {"type":"string"}
      ]
    },
    "active": {
      "type": "boolean",
      "default":true
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "title",
    "active"
  ]
}
