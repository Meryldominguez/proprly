{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/propNew.schema.json",
  "type": "object",
  "properties": {
    "prodId": {
      "type": "integer",
      "message":{
        "required":"Production Id is required"
      }
    },
    "lotId": {
      "type": "integer",
      "message":{
        "required":"LotId is required"
      }
    },
    "quantity": {
      "anyOf": [
        {"type": "integer",
        "exclusiveMinimum": 0,
        "message":{
          "exclusiveMinimum":"Quantity must be more than 0"
        }},
        {"type":"null"}
      ]      
    },
    "notes": {
      "anyOf": [
        {"type": "string"},
        {"type":"null"}
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "prodId",
    "lotId"
  ]
}
