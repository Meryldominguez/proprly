{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.lot.com/lotNew.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "location": {
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "quantity": {
      "anyOf": [
        {"type": "integer", "minimum": 0},
        {"type": "null"}
      ]
    },
    "price": {
      "anyOf": [
        {"type": "number","exclusiveMinimum": 0},
        {"type": "null"}
      ]
    },
    "description": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "location",
    "description"
  ]
}
