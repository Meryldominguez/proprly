{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20,
      "message": {
        "minLength": "Password must be longer than 5 characters"
      }
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "message": {
        "required": "First Name is required",
        "maxLength": "First Name cannot be longer than 30 characters"
      }
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "message": {
        "required": "Last Name is required",
        "maxLength": "Last Name cannot be longer than 30 characters"
      }
    },
    "phone":{
      "anyOf": [
        {"type": "string", 
          "pattern": "^\\s*(?:\\+?(\\d{1,3}))?[-. (]*(\\d{3})[-. )]*(\\d{3})[-. ]*(\\d{4})(?: *x(\\d+))?\\s*$",
          "message": {
            "pattern": "Please enter a valid phone number"
          }
        },
        {"type": "null"}
      ]
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email",
      "message": {
        "format": "Please use a valid email address",
        "maxLength": "Email cannot be longer than 30 characters"
      }
    }
  },
  "additionalProperties": false,
  "required": []
}
